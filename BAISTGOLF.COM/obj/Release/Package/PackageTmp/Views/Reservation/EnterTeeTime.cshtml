<div class="form-horizontal">
    <div class="form-group">
        <div class="col-xs-12 col-sm-7">
            @Html.Label("From (Date): ", new { @class = "control-label" })
            @Html.TextBox("StartDate", null, new { @class = "form-control", id = "startDate" })
            @Html.ValidationMessage("StartDate", new { @class = "text-danger" })
        </div>
        <div class="hidden-xs col-sm-1"></div>
        <div class="col-xs-12 col-sm-4">
            @Html.Label("From (Time): ", new { @class = "control-label" })
            @Html.TextBox("StartTime", null, new { @class = "form-control", id = "startTime" })
            @Html.ValidationMessage("StartTime", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group m-t-25">
        <div class="col-xs-12 col-sm-7">
            @Html.Label("To (Date): ", new { @class = "control-label" })
            @Html.TextBox("EndDate", null, new { @class = "form-control", id = "endDate" })
            @Html.ValidationMessage("EndDate", new { @class = "text-danger" })
        </div>
        <div class="hidden-xs col-sm-1"></div>
        <div class="col-xs-12 col-sm-4">
            @Html.Label("To (Time): ", new { @class = "control-label" })
            @Html.TextBox("EndTime", null, new { @class = "form-control", id = "endTime" })
            @Html.ValidationMessage("EndTime", new { @class = "text-danger" })
        </div>
    </div>
</div>
