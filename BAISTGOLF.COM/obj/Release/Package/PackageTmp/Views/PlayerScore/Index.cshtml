
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2><i class="fa fa-bar-chart m-r-10"></i>Manage Your Scores</h2>
<h4>Here, you can enter your scores and view your reports for the week</h4>

<div class="col-xs-12 col-md-8 m-b-15 no-padding">
    @Html.Action("EnterPlayerScore")
</div>
<div class="col-xs-12 col-md-4 m-b-15 no-padding">
    <div class="list-group m-t-25">
        <a class="list-group-item active">Enter Score</a>
        <a class="list-group-item">Weekly Report</a>
        <a class="list-group-item">Monthly Report</a>
        <a class="list-group-item">Year Report</a>
    </div>
</div>