@model TheBackEndLayer.ViewModels.Members.MembersViewModel
@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="col-xs-12">
    <div class="col-sm-6 col-xs-12 col-md-3 m-t-30">
        <div class="col-xs-12 user-detail">
            <div class="row">
                <img src="~/Content/img/MainBg.jpg" class="profile-image" />
                <div class="col-xs-12">
                    <h3>@Model.FirstName @Model.LastName <small class="m-l-3p"><i class="fa fa-pencil"></i></small></h3>
                    <p><i class="fa fa-user m-r-10"></i> @Model.Gender.ToString()</p>
                    <p><i class="fa fa-map-marker m-r-10"></i> @Model.Address1</p>
                    <p><i class="fa fa-building m-r-10"></i> @Model.City , @Model.Province</p>
                    <p><i class="fa fa-map-signs m-r-10"></i> @Model.PostalCode</p>
                </div>
            </div>

        </div>
    </div>
    <div class="col-sm-6 col-xs-12 col-md-9 m-t-30">
        <div class="col-xs-12 user-detail-more-no-border">
            <h3><i class="fa fa-dashboard m-r-10"></i>Your Dashboard</h3>
            <hr />
            <div class="col-xs-12">
                <div class="col-md-4">
                    <div class="bg-gray-border p-10">
                        <h4 class="text-center">Quick Links</h4>
                        <hr />
                        <div class="list-group">
                            <a href="/reservation/create" class="list-group-item">Create Reservation</a>
                            <a href="/reservation/list" class="list-group-item">View Schedule</a>
                            <a href="/reservation/list" class="list-group-item">Update Reservation</a>
                            <a href="/playerscore" class="list-group-item">Enter Score coming soon</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="bg-gray-border p-10">
                        <h4 class="text-center"><i class="fa fa-list m-r-10"></i>Reservations</h4>
                        <hr />
                        <h5 class="text-center">Current Reservations:</h5>
                        <h5 class="text-center bold">@Model.ReservationStats</h5>
                      
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="bg-gray-border p-10">
                        <h4 class="text-center"><i class="fa fa-soccer-ball-o m-r-10"></i>Scores</h4>
                        <hr />
                        <h5 class="text-center">Averge Score (Week):</h5>
                      
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>