                                <li><a style="font-size: 17px; font-weight: 600">Your Notifications</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                                <li class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Sign Out", "LogOut", "Account")</li>

