<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BAIST Golf Club Online Booking System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body class="bg-gray">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="col-xs-12">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Baist Golfing T", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                    <li>@Html.ActionLink("Reservation Manager", "Index", "Reservations")</li>
                    <li>@Html.ActionLink("Scores", "Index", "PlayerScore")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown hidden-xs">
                        <a href="#" role="button" class="colorgray" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span><i class="fa fa-bell"></i></span> <span class="badge">0</span></a>
                        <ul class="dropdown-menu" role="menu" style="width: 400px">
                            <li><a style="font-size: 17px; font-weight: 600">Your Notifications</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                            <li class="divider"></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Sign Out", "LogOut", "Account")</li>

                </ul>
                <ul class="dropdown dropdown-menu" role="menu" aria-labelledby="dLabel">
                    <li>Yoloo</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-xs-12" style="margin-top: 41px;">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                @RenderBody()
            </div>
        </div>

        <hr />
    </div>
</body>
</html>

